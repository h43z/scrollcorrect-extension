{
  "name": "scrollcorrect",
  "description": "adjust the scroll position after window resizing",
  "manifest_version": 2,
  "version": "1.1",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content-script.js"],
    "run_at": "document_end"
  }],
  "browser_specific_settings": {
    "gecko": {
      "id": "scrollcorrect@h43z"
    }
  },
  "permissions": ["activeTab"]
}
